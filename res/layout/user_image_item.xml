<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/user_image_size"
    android:layout_height="@dimen/user_image_size"
    android:background="@drawable/dropshadow_white_11"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/user_image_item_image"
        android:layout_width="@dimen/user_image_image_size"
        android:layout_height="@dimen/user_image_image_size"
        android:padding="@dimen/user_image_image_padding"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/user_image_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:maxLines="2"
        android:paddingBottom="@dimen/user_image_text_padding"
        android:paddingEnd="@dimen/user_image_text_padding"
        android:paddingStart="@dimen/user_image_text_padding"
        android:singleLine="false"
        android:textSize="@dimen/user_image_item_text_size" />

</LinearLayout>