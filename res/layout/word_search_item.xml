<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_result_height"
    android:background="@drawable/dropshadow_white_11"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/word_search_thumbnail_image"
        android:layout_width="@dimen/search_result_image_size"
        android:layout_height="@dimen/search_result_image_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/search_result_image_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/unknown" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/word_search_thumbnail_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/word_search_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/word_search_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>