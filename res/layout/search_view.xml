<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dropshadow_white_11"
    android:orientation="horizontal"
    android:padding="@dimen/search_view_padding" >

    <Button
        android:id="@+id/activity_main_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/search_button_margin"
        android:layout_weight="2"
        android:background="@drawable/search_button"
        android:onClick="searchClick"
        android:text="@string/search_button_txt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="@string/search_edit_hint_txt" />

</LinearLayout>